<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityB">

    <EditText
        style="@style/BorderedEditText"
        android:id="@+id/number1_edit_text"
        android:layout_marginBottom="20dp"
        android:maxWidth="200dp"
        android:minWidth="100dp"
        android:minHeight="50dp"
        app:layout_constraintBottom_toTopOf="@id/number2_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        style="@style/BorderedEditText"
        android:id="@+id/number2_edit_text"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:maxWidth="200dp"
        android:minWidth="100dp"
        android:minHeight="50dp"
        app:layout_constraintBottom_toTopOf="@id/operation_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number1_edit_text" />

    <Button
        android:id="@+id/operation_button"
        style="@style/BorderedButton"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number2_edit_text" />
</androidx.constraintlayout.widget.ConstraintLayout>